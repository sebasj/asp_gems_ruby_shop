<%= form_for @product do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> Not for save: </h2>
        <ul>
            <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
        <% end %>
    </div>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </p>

  <p>
    <%= f.label :date_start %><br>
    <%= f.text_area :date_start %>
  </p>

  <p>
    <%= f.label :maker %><br>
    <%= f.text_area :maker %>
  </p>

  <p>
    <%= f.label :stock %><br>
    <%= f.text_area :stock %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>


